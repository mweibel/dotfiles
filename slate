#
# Slate configuration
# https://github.com/jigish/slate
#
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

alias fiftyPercentX screenSizeX/2
alias fiftyPercentY screenSizeY/2
alias thirtyPercentX screenSizeX/3
alias thirtyPercentY screenSizeY/3
alias hundredPercentX screenSizeX
alias hundredPercentY screenSizeY

# Resize to half screens
bind left:alt;cmd move 0;screenOriginY ${fiftyPercentX};${hundredPercentY}
bind right:alt;cmd move ${fiftyPercentX};screenOriginY ${fiftyPercentX};${hundredPercentY}
bind up:alt;cmd move 0;screenOriginY ${hundredPercentX};${fiftyPercentY}
bind down:alt;cmd move 0;${fiftyPercentY}+screenOriginY ${hundredPercentX};${fiftyPercentY}

# Resize to corners
bind left:ctrl;alt;cmd move 0;screenOriginY ${fiftyPercentX};${fiftyPercentY}
bind up:ctrl;alt;cmd move ${fiftyPercentX};screenOriginY ${fiftyPercentX};${fiftyPercentY}
bind right:ctrl;alt;cmd move ${fiftyPercentX};${fiftyPercentY}+screenOriginY ${fiftyPercentX};${fiftyPercentY}
bind down:ctrl;alt;cmd move 0;${fiftyPercentY}+screenOriginY ${fiftyPercentX};${fiftyPercentY}

# Reset window
bind .:ctrl;alt;cmd move (screenSizeX*0.4)/2;screenOriginY screenSizeX*0.6;screenSizeY*0.7

# Fullscreen window
bind f:alt;cmd move 0;screenOriginY ${hundredPercentX};${hundredPercentY}

# Focus bindings
bind right:shift;alt focus right
bind left:shift;alt focus left
bind up:shift;alt focus up
bind down:shift;alt focus down
